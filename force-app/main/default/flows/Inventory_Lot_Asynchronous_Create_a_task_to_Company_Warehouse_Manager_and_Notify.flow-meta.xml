            </connector>
            <label>Available Quantity is less</label>
        </rules>
        <rules>
            <name>Available_Quantity_is_more</name>
            <conditionLogic>1 AND 6 AND (2 OR 3 OR 4 OR 5)</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Available_Quantity__c</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
